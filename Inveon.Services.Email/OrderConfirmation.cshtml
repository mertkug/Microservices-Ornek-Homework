@using Inveon.Services.Email
@using System.Collections.Generic
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .order-details {
            margin-bottom: 20px;
        }

        .cart-details {
            list-style-type: none;
            padding: 0;
        }

        .cart-item {
            margin-bottom: 10px;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
        }

        .cart-item p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="order-details">
        <p>Dear @Model.FirstName @Model.LastName,</p>
        <p>Thank you for your order! Your order details are as follows:</p>
        <p>Order Total: @string.Format("{0:C}", @Model.OrderTotal)</p>
    </div>
    <div class="cart-details">
        <p>Cart Details:</p>
        <ul>
            @foreach (var cartDetail in Model.CartDetails)
            {
                <li class="cart-item">
                    <p>Product: @cartDetail.Product.Name</p>
                    <p>Price: @string.Format("{0:C}", cartDetail.Product.Price)</p>
                    <p>Quantity: @cartDetail.Count</p>
                </li>
            }
        </ul>
    </div>
    <p>...</p>
</body>
</html>
