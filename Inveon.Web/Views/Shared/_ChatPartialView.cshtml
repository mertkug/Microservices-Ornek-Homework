<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Support Chat</title>
    <style>
        .live-support-button {
            position: sticky;
            bottom: 20px;
            right: 20px;
            left: 90%;
        }

        .chat-container {
            position: sticky;
            bottom: 100px;
            right: 20px;
            max-width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            display: none;
            left: 90%;
        }

        .chat-header {
            padding: 10px;
            background-color: #f5f5f5;
            border-bottom: 1px solid #ccc;
            cursor: pointer;
        }

        .chat-body {
            max-height: 200px;
            overflow-y: auto;
            padding: 10px;
        }

        .chat-footer {
            border-top: 1px solid #ccc;
            padding: 10px;
        }
    </style>
</head>
<body>

    <!-- Live Support Button -->
    <button class="live-support-button btn btn-outline-primary" id="liveSupportButton">Live Support</button>

    <!-- Chat Container -->
    <div class="chat-container" id="chatContainer" style="border-radius:15px;">
        <div class="row">
            <div class="col-4"><input type="hidden" id="userInput" value="@User.Identity.Name"/></div>
        </div>
        <div class="chat-header" style="border-radius:15px; background-color:darkorange;">Live Support</div>
        <div class="chat-body">
            <ul id="messagesList">
                <ul id="messagesList">
                </ul>
            </ul>
        </div>
        <div class="chat-footer">
            <input type="text" id="messageInput" placeholder="Type a message...">
            <button id="sendButton" class="btn btn-outline-success">Send</button>
        </div>
    </div>

    <script>
        document.getElementById('liveSupportButton').addEventListener('click', function () {
            document.getElementById('chatContainer').style.display = 'block';
            document.getElementById('liveSupportButton').style.display = 'none';
        });

        document.querySelector('.chat-header').addEventListener('click', function () {
            document.getElementById('chatContainer').style.display = 'none';
            document.getElementById('liveSupportButton').style.display = 'block';
        });
    </script>

</body>
</html>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Chat.js"></script>
